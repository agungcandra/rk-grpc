{{define "api"}}
<!DOCTYPE html>
<html lang="en" class="color-toggle-light" color-mode="light">
{{template "head"}}

<body>
{{template "svg-sprite"}}

<div class="wrapper dark-mode-dim">
  {{template "header"}}
  <main class="container flex flex-even">
    {{template "aside"}}
    <!--- main page --->
    <div class="gdoc-page">
      <!--- header nav --->
      <div class="gdoc-page__header flex flex-wrap justify-between" itemprop="breadcrumb">
        <div>
          <svg class="icon gdoc_path hidden-mobile"><use xlink:href="#gdoc_path"></use></svg>
          <ol class="breadcrumb">
            <li><a href="/rk/v1/tv/application"><span>Application</span></a></li>
            <li>/</li>
            <li><span itemprop="name">API</span></li>
          </ol>
        </div>
      </div>

      <!--- content --->
      <article class="gdoc-markdown">
        <!--- title --->
        <div class="gdoc-page__anchorwrap">
          <h1 id="api"> API </h1>
          </div>
          <!--- content --->
          <table>
            <thead>
              <tr>
                <th>Entry Name</th>
                <th>Service</th>
                <th>Method</th>
                <th>Port</th>
                <th>GW Pattern</th>
                <th>GW Method</th>
                <th>GW Port</th>
                <th>SW</th>
              </tr>
            </thead>
            <tbody>
              {{ range .Entries }}
              <tr>
                <td>{{ .EntryName }}</td>
                <td>{{ .Grpc.Service }}</td>
                <td>{{ .Grpc.Method }}</td>
                <td>{{ .Grpc.Port }}</td>
                <td>{{ .Grpc.Gw.Pattern }}</td>
                <td>{{ .Grpc.Gw.Method }}</td>
                <td>{{ .Grpc.Gw.Port }}</td>
                <td><a target="_blank" href="{{ .Grpc.Gw.SwUrl }}">{{ .Grpc.Gw.SwUrl }}</a></td>
              </tr>
              {{ end }}
            </tbody>
          </table>
        </div>
      </article>
    </div>
  </main>
  {template "footer"}}
</div>
</body>
</html>
{{end}}